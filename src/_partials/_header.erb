<header class="header">
  <div class="container">
    <div class="logo"><a href="/">Lintje</a></div>

    <div class="navigation">
      <input type="checkbox" id="menu-open" class="js-menu-state" />
      <label class="menu-toggle js-menu-toggle" for="menu-open">
        <span class="screen-reader-text">Toggle mobile navigation menu</span>
        <div class="menu-icon">
          <div class="menu-icon-inner"></div>
        </div>
      </label>

      <nav class="navigation-desktop">
        <ul>
          <li><%= link_to_active "Home", "/" %></li>
          <li><%= link_to_active "Documentation", "/docs/", %r{^/docs} %></li>
          <li><%= link_to_active "News", "/posts/", %r{^/posts} %></li>
          <li><%= link_to_active "About", "/about/" %></li>
        </ul>
        <%= liquid_render "bridgetown_quick_search/search", :placeholder => "Search" %>
      </nav>

      <nav class="navigation-mobile">
        <%= liquid_render "bridgetown_quick_search/search", :placeholder => "Search" %>
        <ul>
          <li><%= link_to_active "Home", "/" %></li>
          <li><%= link_to_active "News", "/posts/", %r{^/posts} %></li>
          <li><%= link_to_active "About", "/about/" %></li>
          <li>
            <%= link_to_active "Documentation", "/docs/", %r{^/docs} %>
            <%= render "docs_navigation" %>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>
